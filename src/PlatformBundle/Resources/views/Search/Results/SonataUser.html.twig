{% extends 'BlastSearchBundle:Search/Results:result.html.twig' %}

{% set resultUrl = path('admin_sonata_sylius_user_show', {'id': result.id}) %}

{% block search_url %}
    {{ resultUrl }}
{% endblock %}

{% block search_title %}
    {% if result.hasRole('ROLE_SUPER_ADMIN') %}
        <i class="fa fa-star"></i>
    {% endif %}
    {{ result.username }}
{% endblock %}

{% block search_main_text %}
    {{ result.email }}
{% endblock %}

{% block search_actions %}
    <div class="btn-group">
        <a class="btn btn-default" href="{{ resultUrl }}">
            {{ 'action_show'|trans({}, 'SonataAdminBundle') }}
        </a>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            {# {% if is_granted('EDIT', result) %} #}
            <li>
                <a href="{{ path('admin_sonata_sylius_user_edit', {'id': result.id}) }}">
                    {{ 'action_edit'|trans({}, 'SonataAdminBundle') }}
                </a>
            </li>
            {# {% endif %} #}
        </ul>
    </div>
{% endblock %}
